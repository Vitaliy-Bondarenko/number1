<%= form_for @task do |f| %>
<% if @task.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for messages in @task.errors.full_messages %>
        <li><%= messages %></li>
      </ul>
    </div>
  <% end %>  
  <% end %> 
  
  <div><%= f.label :title %><br />
  <%= f.text_field :title, autofocus: true %></div>

  <div><%= f.label :description %><br />
    <%= f.text_area :description, size: "31x8" %></div>

  <div><%= f.label :priority %><br />
    <%= f.number_field :priority, in: 1.0..5.0,  step: 1 %></div>

	
  	<div><%= f.label :due_date %><br />
    <%= f.text_field :due_date%></div>

  	  <p class="button"><%= f.submit %></p>
<% end %>


